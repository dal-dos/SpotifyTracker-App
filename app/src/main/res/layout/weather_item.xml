<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_baseline_cloud_24"
            android:contentDescription="@string/image" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="5dp"
            android:id="@+id/linearlayout">
            <TextView
                android:id="@+id/curr_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Weather"
                android:fontFamily="@font/comfortaasemibold" />

            <TextView
                android:id="@+id/itemSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:fontFamily="@font/comfortaalight" />

            <TextView
                android:id="@+id/itemDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:fontFamily="@font/comfortaalight"/>
        </LinearLayout>
        <TextView
            android:id="@+id/itemTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25C"
            android:layout_marginHorizontal="10dp"
            android:textSize="20dp"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/comfortaalight"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <ListView
            android:id="@+id/rec_tomorrow_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/none_found" />
    </LinearLayout>
</LinearLayout>
